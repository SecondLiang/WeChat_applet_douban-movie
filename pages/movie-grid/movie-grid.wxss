/* pages/movie-grid/movie-grid.wxss */
@import '/pages/movie-rating/movie-rating';
.movie-warp{
  display: inline-block;
  width: 28%;
  padding: 10rpx;
}
.movie-warp .img-box{
  height: 260rpx;
}
.movie-warp .img-box image{
  width: 100%;
  height: 100%;
}
.movie-warp .movie-name,
.movie-warp .want-look{
  display: block;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #666;
  font-size: 24rpx;
  padding: 5rpx 0;
  text-align: center;
}
.movie-warp .movie-name{
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}
