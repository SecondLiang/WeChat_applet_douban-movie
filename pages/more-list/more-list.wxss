
@import '/pages/movie-rating/movie-rating.wxss';
.more-list-warp {
  width: 100%;
  padding: 15rpx;
  display: flex;
  flex-direction: row;
}

.img-warp {
  width: 180rpx;
  height: 260rpx;
  /* border: 1rpx solid red; */
  padding: 5rpx;
}

.img-warp image {
  width: 100%;
  height: 100%;
}

.info-warp {
  width: 360rpx;
  padding: 10rpx 10rpx 0 10rpx;
  display: flex;
  flex-direction: column;
  /* border: 1rpx solid red; */
  position: relative;
}
.info-warp .title,.direc,.casts,.genres,.rating,.wishLook {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-left: 5px;
  line-height: 43rpx;
}
.info-warp .title {
 font-size: 32rpx;
 font-weight: bold;
 color: #666;
}

.info-warp .direc,.casts,.genres {
  font-size: 26rpx;
  color: #999;
}
.info-warp .wishLook {
  color: lightskyblue;
  font-size: 24rpx;
}

.ticket, .wishBtn {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  top: 50%;
  right: -120rpx;
  transform: translateY(-50%);
  border-width: 1rpx;
  border-style: solid;
  color: #999;
  font-size: 30rpx;
  border-radius: 10rpx;
  text-align: center;
}
.ticket {
  color: lightskyblue;
  border-color: lightskyblue;
}
.wishBtn {
  color: lightpink;
 border-color: lightpink;
}
